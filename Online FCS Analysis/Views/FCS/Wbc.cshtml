@{
    ViewData["Title"] = "";
}

<div class="body_first_area chart-area">
    <div class="row">
        <div class="col-12 col-lg-4 col-xl-3">
            <div class="text-right">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#file-upload-dialog" data-backdrop="static" data-keyboard="false">
                    Upload FCS Files
                </button>
                <button type="button" class="btn btn-info wbc-items" onclick="DefaultGate()" disabled>
                    Default Gate
                </button>
            </div>
            <br />
            <table id="fcs-table" class="table table-striped table-bordered dt-responsive nowrap" width="100%">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>WBC</th>
                        <th>Created At</th>
                        <th>Updated At</th>
                        <th>Delete</th>
                    </tr>
                </thead>
            </table>
        </div>
        <!-- Chart Graph -->
        <div class="col-12 col-lg-8 col-xl-9 enable-scroll">
            <div class="row ml-3 mr-1">
                <ul class="nav nav-tabs nav-fill gate-tab">
                    <li class="nav-item">
                        <a class="nav-link" onclick="CustomeGate()">Custom Gate</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" onclick="DefaultGate()">Default Gate</a>
                    </li>
                </ul>
            </div>
            <div class="row ml-3 mr-1">
                <div class="col-3">
                    <label for="channel-1">Channel X :</label>
                    <select id="channel-1" name="channel-1" class="form-control wbc-items wbc-channels" onchange="ChangeChannel()">
                    </select>
                </div>
                <div class="col-3">
                    <label for="channel-2">Channel Y :</label>
                    <select id="channel-2" name="channel-2" class="form-control wbc-items wbc-channels" onchange="ChangeChannel()">
                    </select>
                </div>
                <div class="col-2 mt-auto mb-auto">
                    <input class="wbc-items channel-items" type="checkbox" id="draw-heatmap" name="draw-heatmap" onchange="UpdateChart()" />
                    <label for="draw-heatmap">Draw Heatmap</label>
                </div>
                <div class="col-2 mt-auto mb-auto default-gate-div">
                    <input class="wbc-items" type="checkbox" id="dynamic-gate" name="dynamic-gate" onchange="ChangeDynamic(this.checked)" />
                    <label for="dynamic-gate">Dynamic Gate</label>
                </div>
                <div class="col-2 text-center channel-items custom-gate-div">
                    <button class="btn btn-primary mb-1 wbc-items channel-items">Create New Gate</button>
                    <input class="form-control wbc-items" id="gate-name" placeholder="Gate Name" title="Insert your custom gate name" />
                </div>
                <div class="col-2 text-center channel-items mt-auto mb-auto custom-gate-div">
                    <button class="btn btn-primary wbc-items channel-items">Save Gates</button>
                </div>
            </div>
            <div class="row ml-3 mr-1" id="gates">
            </div>
            <div class="chart-container">
                <canvas id="fcs-chart"></canvas>
            </div>
        </div>
    </div>

</div>
@if (User.Identity.IsAuthenticated)
{
    @await Html.PartialAsync("~/Views/FileManager/Index.cshtml", "/FileManager/Upload")
}

@section Stylesheet {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/select/1.3.1/css/select.bootstrap4.min.css">
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script src="~/js/chartjs-plugin-dragdata.min.js"></script>
    <script src="~/js/fcs-chart.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/wbc.js"></script>
}